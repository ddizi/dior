# Kotlin EditorConfig File

# 최상위 디렉토리에서 지정한 항목은 모든 하위 디렉토리에서 사용됩니다.
root = true

# Indentation 설정
[*]
indent_style = space
indent_size = 4

# 끝에 불필요한 공백이 있는지 검사
[*.{kt,kts}]
trim_trailing_whitespace = true

# 파일의 끝에 개행을 추가
[*.{kt,kts}]
insert_final_newline = true

# 파일 인코딩 설정
[*.{kt,kts}]
charset = utf-8
